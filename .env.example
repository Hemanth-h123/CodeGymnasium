# Application
NODE_ENV=production
APP_NAME=CodeGymnasium
APP_URL=https://codegymnasium-frontend.onrender.com
API_URL=https://auth-service-a862.onrender.com

# Database - PostgreSQL
# (Update with your Render PostgreSQL URL if using managed DB)
DATABASE_URL=postgresql://codegym_user:codegym_pass@<your-render-postgres-host>:5432/codegymnasium
POSTGRES_USER=codegym_user
POSTGRES_PASSWORD=codegym_pass
POSTGRES_DB=codegymnasium

# Database - MongoDB (Discussions)
# (Update if using managed MongoDB)
MONGODB_URL=mongodb://codegym_user:codegym_pass@<your-mongo-host>:27017/codegymnasium_discussions?authSource=admin
MONGO_INITDB_ROOT_USERNAME=codegym_user
MONGO_INITDB_ROOT_PASSWORD=codegym_pass

# Redis
REDIS_URL=redis://<your-redis-host>:6379
REDIS_HOST=<your-redis-host>
REDIS_PORT=6379

# RabbitMQ
RABBITMQ_URL=amqp://codegym_user:codegym_pass@<your-rabbitmq-host>:5672
RABBITMQ_DEFAULT_USER=codegym_user
RABBITMQ_DEFAULT_PASS=codegym_pass

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-in-production-min-32-chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# OAuth Providers (Optional - for social login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Email Service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@codegymnasium.com

# AWS S3 (for file uploads - problem attachments, user avatars)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=codegymnasium-assets

# Payment Gateway (Stripe for premium subscriptions)
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Code Execution Service
CODE_EXECUTION_TIMEOUT=10000
CODE_EXECUTION_MEMORY_LIMIT=256
MAX_CONCURRENT_EXECUTIONS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Frontend
NEXT_PUBLIC_API_URL=https://auth-service-a862.onrender.com
NEXT_PUBLIC_APP_NAME=CodeGymnasium
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Service Ports (should be ignored by production since Render sets PORT env automatically)
API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
COURSE_SERVICE_PORT=3003
PROBLEM_SERVICE_PORT=3004
CODE_EXECUTION_SERVICE_PORT=3005
DISCUSSION_SERVICE_PORT=3006
CHALLENGE_SERVICE_PORT=3007

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=https://auth-service-a862.onrender.com
USER_SERVICE_URL=https://user-service-xxxx.onrender.com
COURSE_SERVICE_URL=https://course-service-xxxx.onrender.com
PROBLEM_SERVICE_URL=https://problem-service-xxxx.onrender.com
CODE_EXECUTION_SERVICE_URL=https://code-execution-service-xxxx.onrender.com
DISCUSSION_SERVICE_URL=https://discussion-service-xxxx.onrender.com
CHALLENGE_SERVICE_URL=https://challenge-service-xxxx.onrender.com
